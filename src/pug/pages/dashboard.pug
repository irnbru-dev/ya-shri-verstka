extends ../layout/main

block content

    div.container
        section.main-window-grid
            div
                h2 Главное
                +general
                    div.general__card-list-grid
                        +card('#', '', 'Phillips Cooler', 'Начнет охлаждать в 16:30')
                        +card('#', '', 'Xiaomi Yeelight LED Smart Bulb', 'Включится в 17:00')

            div.selected-sceme
                h2 Избранные сценарии
                +controls()
                div.selected-sceme-grid
                    +card('#popup_light', '', 'Выключить весь свет в доме и во дворе' )
                        +popup('popup__light', 'Xiaomi Yeelight LED Smart Bulb', 'Включится в 17:00')
                    +card('#', '', 'Я ухожу')
                    +card('#', '', 'Включить свет в коридоре')
                    +card('#', '', 'Набрать горячую ванну', 'Начнется в 18:00')
                    +card('#', '', 'Сделать пол теплым во всей квартире')
        section.selected-device
            h2.selected-device__title Избранные устройства
            +controls()
            +filtr()
            div.selected-device-grid
                +card('#', '', 'Xiaomi Yeelight LED Smart Bulb', 'Включено')
                +card('#', '', 'D-Link Omna 180 Cam', 'Включится в 17:00')
                +card('#', '', 'Elgato Eve Degree Connected', 'Выключено до 17:00')
                +card('#', '', 'Xiaomi Mi Air Purifier 2S', 'Включено')
                +card('#', '', 'Philips Zhirui', 'Выключено')